<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Name="PageSwitcher" x:Class="SudokuSolver.MainWindow"
        Title="MainWindow" Height="400" Width="600" ResizeMode="NoResize">
    <Grid Background="#FF1D1D1D">
        <Label Content="Sudoku" Margin="0,50,0,0" VerticalAlignment="Top" FontFamily="Lobster 1.4" FontSize="36" Background="{x:Null}" Foreground="White" Height="55" HorizontalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Right" Height="22" Margin="0,287,10,0" TextWrapping="Wrap" Text="Created by Someone. All rights reserved." VerticalAlignment="Bottom" Width="217" Foreground="White"/>
        <ComboBox x:Name="ComboBox_menu" HorizontalAlignment="Center" Height="35" Margin="0,110,0,0" VerticalAlignment="Top" Width="150" SnapsToDevicePixels="True" SelectionChanged="ComboBox_Difficulty_SelectionChanged">
            <ComboBoxItem Content="Générer un Sudoku"/>
            <ComboBoxItem Content="Résoudre un Sudoku"/>
            <ComboBoxItem Content="Vérifier un Sudoku"/>
        </ComboBox>

    </Grid>
</Window>
