<Window x:Class="Sudoku.ResolutionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ResolutionWindow" Height="400" Width="600">
    <Grid Background="#FF1D1D1D">
        <Grid HorizontalAlignment="Left" Height="100" Margin="30,0,0,30" VerticalAlignment="Bottom" Width="100" Visibility="Hidden">
            <DataGrid HorizontalAlignment="Left" Margin="44,0,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Label VerticalAlignment="Top" FontFamily="Lobster 1.4" FontSize="36" Background="{x:Null}" Foreground="White" Height="55" HorizontalAlignment="Center" Content="SudokuSolver" Width="210"/>
        <Button Content="Charger un fichier" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Width="111" Click="Button_Click"/>

    </Grid>
</Window>
